<Window x:Class="DesktopUI.DriversWindows.DriversMainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopUI.DriversWindows"
        mc:Ignorable="d"
        Title="Drivers Main Menu" Height="1080" Width="1920" FontWeight="Thin" Background="#333" Foreground="White" WindowStartupLocation="CenterScreen" WindowState="Maximized" Activated="Window_Activated">
    <StackPanel>
        <Button x:Name="BtnBackToStart" Content="Back To Start" Width="250" Height="70" FontSize="25" Margin="30 30 0 0" Background="Red" Foreground="White" HorizontalAlignment="Left" Click="BtnBackToStart_Click" />

        <TextBlock Text="Drivers" FontSize="64" Margin="0 0 0 60" HorizontalAlignment="Center" VerticalAlignment="Center" />

        <Border BorderBrush="White" BorderThickness="1" Width="1350" Height="500">
            <ScrollViewer>
                <StackPanel x:Name="SpDrivers" Orientation="Vertical" />
            </ScrollViewer>            
        </Border>

        <Button x:Name="BtnCreateDriver" Content="Create Driver" Width="250" Height="70" FontSize="30" Margin="0 50" Click="BtnCreateDriver_Click" />
    </StackPanel>
</Window>
 